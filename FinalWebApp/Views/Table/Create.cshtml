@model FinalWebApp.ViewModels.TableViewModel
@{
    ViewData["Title"] = "Create";

    var isCreate = Model == null || Model.Id == Guid.Empty;
    var actionString = isCreate ? "Create" : "Edit";
    var buttonString = isCreate ? "Create" : "Edit";
}

<h1>@actionString</h1>

<hr />

<div class="content-container">
    <div class="form-container shadow-lg">
        <h2>Create New Table</h2>
        <form asp-action="@actionString" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div>@TempData["Message"]</div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Table Name</label>
                <input asp-for="Name" class="form-control input-style" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Capacity" class="control-label">Capacity</label>
                <input asp-for="Capacity" class="form-control input-style" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control input-style">
                    <option value="1">Empty</option>
                    <option value="2">Booked</option>
                    <option value="3">Active</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="@buttonString" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="item-list-container shadow-lg">
        <h2>List of Tables</h2>
        @await Component.InvokeAsync("TableList")
    </div>
</div>

<style>
    /* Body Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #e8ebf0); /* Soft gradient */
        color: #333;
        padding: 20px;
    }

    h1 {
        color: #2c3e50;
        font-size: 36px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
        text-transform: uppercase;
    }

    h2 {
        color: #2c3e50;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .content-container {
        display: flex;
        gap: 20px;
        width: 100%;
        padding-bottom: 50px;
    }

    .form-container {
        flex: 0 0 30%;
        background-color: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }

    .item-list-container {
        flex: 0 0 70%;
        background-color: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        width: 100%;
        margin-bottom: 20px;
    }

    .input-style {
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        transition: box-shadow 0.3s, border-color 0.3s;
    }

        .input-style:focus {
            border-color: #f39c12;
            box-shadow: 0 0 8px rgba(243, 156, 18, 0.5);
        }

    .btn-primary {
        background-color: #f39c12;
        border: none;
        border-radius: 12px;
        padding: 14px 20px;
        font-size: 18px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #e67e22;
        }

    .shadow-lg {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .text-danger {
        color: #e74c3c;
    }

    /* Select styling */
    select.input-style {
        padding: 12px;
        font-size: 16px;
        border-radius: 12px;
        border: 1px solid #ddd;
        width: 100%;
    }

    /* Form Labels */
    .control-label {
        font-weight: 600;
        margin-bottom: 8px;
        color: #2c3e50;
    }

</style>
