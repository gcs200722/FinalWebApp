@model IEnumerable<FinalWebApp.Data.Entities.Order>

@{
    ViewData["Title"] = "Paid or Canceled Orders";
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1 class="header">List of Paid or Canceled Orders</h1>

        <!-- Form lọc theo trạng thái đơn hàng -->
        <form method="get" asp-action="OrderCompleted" class="filter-form">
            <div class="form-group">
                <label for="orderStatus">Filter by Order Status:</label>
                <select id="orderStatus" name="orderStatus" class="form-control">
                    <option value="paid">Paid</option>
                    <option value="canceled">Canceled</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

        <!-- Table danh sách -->
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Customer Name</th>
                        <th>Order Status</th>
                        <th>Table Information</th>
                        <th>Total Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@order.Customer?.Fullname</td>
                            <td>
                                @if (order.OrderStatus == FinalWebApp.Enum.OrderStatusEnum.Paid)
                                {
                                    <span class="badge badge-success">Paid</span>
                                }
                                else if (order.OrderStatus == FinalWebApp.Enum.OrderStatusEnum.Canceled)
                                {
                                    <span class="badge badge-danger">Canceled</span>
                                }
                            </td>
                            <td>@order.Table?.Name</td>
                            <td>@order.TotalAmount.ToString("C2")</td>
                            <td>
                                <a href="@Url.Action("Details", "Staff", new { orderId = order.Id })" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f0f4ff, #e4e9f7);
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 90%;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 20px;
        padding: 20px;
        box-shadow: inset 5px 5px 15px #d4d4d4, inset -5px -5px 15px #ffffff;
    }

    .header {
        font-size: 2rem;
        font-weight: 600;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .filter-form {
        margin-bottom: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
    }

    .form-control {
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        background: #f9f9f9;
        box-shadow: inset 2px 2px 5px #e0e0e0, inset -2px -2px 5px #ffffff;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 25px;
        font-size: 14px;
        font-weight: 600;
        color: #fff;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: #4CAF50;
    }

        .btn-primary:hover {
            background: #45a049;
        }

    .btn-info {
        background: #007bff;
    }

        .btn-info:hover {
            background: #0056b3;
        }

    .table-wrapper {
        overflow-x: auto;
        margin-top: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        border-radius: 15px;
        overflow: hidden;
        background: #f9f9f9;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    thead {
        background: #4CAF50;
        color: #fff;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
    }

    tr:nth-child(even) {
        background: #e0f7e7;
    }

    tr:hover {
        background: #d4f4dd;
        transition: 0.3s;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 0.9rem;
        color: #fff;
    }

    .badge-success {
        background: #28a745;
    }

    .badge-danger {
        background: #dc3545;
    }
</style>

</html>
