@model FinalWebApp.Data.Entities.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="order-details-container">
    <h1 class="title">Order Details</h1>

    <div class="order-summary">
        <h3 class="order-id">Order ID: @Model.Id</h3>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Customer:</strong> @Model.Customer?.Fullname</p>
        <p><strong>Table:</strong> @Model.Table?.Name</p>
        <p>
            <strong>Order Status:</strong>
            @if (Model.OrderStatus == FinalWebApp.Enum.OrderStatusEnum.Paid)
            {
                <span class="badge bg-success">Paid</span>
            }
            else if (Model.OrderStatus == FinalWebApp.Enum.OrderStatusEnum.Canceled)
            {
                <span class="badge bg-danger">Canceled</span>
            }
            else
            {
                <span class="badge bg-warning">@Model.OrderStatus</span>
            }
        </p>
        <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C2")</p>
    </div>

    <h3 class="order-items-title">Order Items</h3>
    <table class="table order-items-table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("OrderCompleted", "Staff")" class="btn btn-back">Back to Orders</a>
</div>
<style>
    /* Container for order details */
    .order-details-container {
        background-color: #f4f6f9;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 80%;
        margin: 30px auto;
        transition: all 0.3s ease;
    }

    /* Title Styling */
    .title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Order Summary Styling */
    .order-summary {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    /* Order ID and Text Styling */
    .order-id {
        font-size: 1.2rem;
        color: #f39c12;
        font-weight: bold;
    }

    .order-summary p {
        font-size: 1rem;
        color: #333;
        margin: 10px 0;
    }

    /* Badge styling */
    .badge {
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 1rem;
        font-weight: 600;
    }

    .bg-success {
        background-color: #2ecc71;
        color: white;
    }

    .bg-danger {
        background-color: #e74c3c;
        color: white;
    }

    .bg-warning {
        background-color: #f39c12;
        color: white;
    }

    /* Order Items Title */
    .order-items-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        text-align: center;
    }

    /* Table Styling */
    .table {
        width: 100%;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background-color: #f39c12;
            color: white;
        }

        .table td, .table th {
            padding: 15px;
            text-align: center;
        }

        .table tbody tr {
            background-color: #fff;
            transition: background-color 0.3s ease;
        }

            .table tbody tr:hover {
                background-color: #ecf0f1;
            }

            .table tbody tr:nth-child(odd) {
                background-color: #f9f9f9;
            }

    /* Back Button Styling */
    .btn-back {
        background: linear-gradient(135deg, #f39c12, #e67e22);
        border: none;
        padding: 12px 24px;
        border-radius: 25px;
        color: white;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: 600;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: linear-gradient(135deg, #e67e22, #f39c12);
            transform: scale(1.05);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

</style>