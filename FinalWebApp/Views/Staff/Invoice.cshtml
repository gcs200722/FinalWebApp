@model FinalWebApp.Data.Entities.Order

<h2>Hóa Đơn</h2>
<p>
    <strong>Mã hóa đơn:</strong> @Model.Id <br />
    <strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm") <br />
    <strong>Thời gian ăn:</strong> @Model.DiningTime.ToString("dd/MM/yyyy HH:mm") <br />
    <strong>Khách hàng:</strong> @Model.Customer?.Fullname <br />
    <strong>Bàn:</strong> @Model.Table?.Name <br />
    <strong>Trạng thái:</strong> Đã thanh toán <br />
    <strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("C") <br />
</p>

<h3>Chi Tiết Món Ăn</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên món</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Tổng cộng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-secondary" onclick="window.print()">In Hóa Đơn</button>
<a asp-action="ListOrder" class="btn btn-primary">Quay lại danh sách đơn hàng</a>
