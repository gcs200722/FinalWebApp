@model FinalWebApp.ViewModels.InvoiceViewModel

<h2>Invoice</h2>
<p><strong>Order ID:</strong> @Model.OrderId</p>
<p><strong>Order Date:</strong> @Model.OrderDate</p>
<p><strong>Customer:</strong> @Model.CustomerName</p>
<p><strong>Table:</strong> @Model.TableName</p>
<p><strong>Status:</strong> @Model.Status</p>

<table>
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>    
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
<button onclick="window.print()">Print Invoice</button>
