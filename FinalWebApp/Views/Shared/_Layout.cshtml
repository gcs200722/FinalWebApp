@using FinalWebApp.Session
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using FinalWebApp.Data.Entities
@using Microsoft.AspNetCore.SignalR;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var cart = Context.Session.Get<List<Guid>>("Cart") ?? new List<Guid>(); // Lấy giỏ hàng từ Session
    int itemCount = cart.Count();  // Số lượng món ăn khác nhau trong giỏ hàng
    // Truyền số lượng món ăn vào ViewData
    ViewData["CartItemCount"] = itemCount;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalWebApp.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-gradient-primary shadow-lg mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils me-2"></i>FinalWebApp
                </a>

                <!-- Toggler button for responsive design -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left-side navigation items -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="ViewUser" asp-controller="UserManager">User Manager</a>
                            </li>
                        }
                        else if (User.IsInRole("STAFF"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="ListOrder" asp-controller="Staff">Order Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="TableManagement" asp-controller="Staff">Table Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="OrderCompleted" asp-controller="Staff">Order Completed</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="ListCustomers" asp-controller="Staff">List Customer</a>
                            </li>
                        }
                        else if (User.IsInRole("CUSTOMER"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Index" asp-controller="Customer">Menu</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="OrderHistory" asp-controller="Customer">Order History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Cart" asp-controller="Cart">
                                    <i class="fa fa-shopping-cart" style="font-size: 24px;">
                                        <span class="badge badge-pill badge-light" id="cart-count">
                                            @ViewData["CartItemCount"] <!-- Hiển thị số lượng món ăn ban đầu -->
                                        </span>
                                    </i>
                                </a>
                            </li>

                        }
                        else if (User.IsInRole("MANAGER"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Create" asp-controller="Table">Manage Table</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Create" asp-controller="Category">Manage Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Create" asp-controller="Item">Manage Item</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="RevenueReport" asp-controller="Manager">Revenue Report</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="ViewUser" asp-controller="UserManager">Manage Staff</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="CustomerFeedbackReport" asp-controller="Manager">Manage Feedback</a>
                            </li>
                        }                      
                        <!-- Additional public or shared links can go here -->
                    </ul>
                    <!-- Right-side user-specific items -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            <li class="nav-item">
                                <span class="navbar-text text-white me-3">Hello, @currentUser?.Fullname</span>
                            </li>
                            @if (User.IsInRole("CUSTOMER") || User.IsInRole("STAFF"))
                            {
                                <li class="nav-item dropdown">
                                    <!-- Icon thông báo -->
                                    <a class="nav-link text-white position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-bell"></i>
                                        <!-- Badge hiển thị số lượng thông báo -->
                                        <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">
                                            0
                                        </span>
                                    </a>
                                    <!-- Dropdown hiển thị danh sách thông báo -->
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                                        <li class="dropdown-item text-center text-muted" id="noNotifications">
                                            No notifications
                                        </li>
                                        <ul id="notificationList" data-id="orderId"></ul>
                                        <li class="dropdown-item text-center">
                                            <button class="btn btn-link" id="clearNotifications">Clear All</button>
                                        </li>
                                    </ul>
                                </li>
                            }
   


                            <li class="nav-item">
                                <form method="post" asp-area="" asp-controller="User" asp-action="Logout" class="form-inline">
                                    <button type="submit" class="btn btn-outline-light me-3">Logout</button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/User/Profile">
                                    <img src="@Url.Content("~/Image/" + (currentUser?.Avatar ?? "default-avatar.png"))"
                                         alt="Avatar" class="rounded-circle border border-light" width="30" height="30" />
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/User/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/User/Register">Register</a>
                            </li>
                        }
                    </ul>

                            <!-- Role-based navigation -->
                         
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/order.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>



<style>
  
    #notificationList {
        max-height: 300px;
        overflow-y: auto;
    }

    /* Header và Footer opacity */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #1d3557, #457b9d); /* Gradient xanh đậm */
        color: white;
        opacity: 0.95; /* Giảm độ opacity */
    }

    /* Navbar Brand */
    .navbar-brand {
        font-size: 1.6rem;
        font-family: 'Lora', serif; /* Font sang trọng */
    }

    /* Navigation links */
    .nav-link {
        font-size: 1.1rem;
        font-family: 'Nunito', sans-serif; /* Font hiện đại, dễ đọc */
        transition: color 0.3s ease;
    }

        .nav-link:hover {
            color: #a8dadc; /* Màu xanh nhạt khi hover */
        }

    /* Button outline-light */
    .btn-outline-light {
        border-color: white;
        color: white;
        font-family: 'Nunito', sans-serif;
        transition: background-color 0.3s ease;
    }

        .btn-outline-light:hover {
            background-color: #e63946; /* Đỏ nhạt khi hover */
            color: white;
        }

    /* Avatar rounded-circle */
    .rounded-circle {
        box-shadow: 0 0 8px rgba(255, 255, 255, 0.7);
    }

    /* Body font */
    body {
        font-family: 'Nunito', sans-serif;
    }

    .navbar-text {
        font-family: 'Lora', serif;
    }


    /* Navbar responsive */
    .navbar-toggler {
        border: none;
        background-color: transparent;
    }

   
</style>
</html>

<!-- Thêm link font từ Google Fonts -->




