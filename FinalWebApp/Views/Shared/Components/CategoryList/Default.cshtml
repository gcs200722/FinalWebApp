@model List<FinalWebApp.Data.Entities.Category>

<div class="row">
    <table class="styled-table">
        <thead>
            <tr>
                <th>Position</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var position = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(position++)</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="~/Category/Edit?idCategory=@item.Id" class="btn-update">Update</a>

                            @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
                            {
                                @Html.Hidden("id", item.Id)
                                <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="empty-data">Empty data</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Bố cục bảng */
    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1rem;
        text-align: left;
        background: linear-gradient(145deg, #ffffff, #f3f4f6);
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.1), -5px -5px 15px rgba(255, 255, 255, 0.7);
        border-radius: 15px;
        overflow: hidden;
    }

        /* Định dạng tiêu đề bảng */
        .styled-table thead tr {
            background-color: #4CAF50;
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
            transition: background-color 0.3s ease;
        }

            .styled-table tbody tr:hover {
                background-color: #f1f1f1;
            }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f9f9f9;
            }

        .styled-table tbody .empty-data {
            text-align: center;
            font-style: italic;
            color: #777;
        }

    /* Nút hành động */
    .btn-update {
        text-decoration: none;
        color: white;
        background-color: #4CAF50;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
        box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.2), -3px -3px 8px rgba(255, 255, 255, 0.7);
    }

        .btn-update:hover {
            background-color: #45a049;
        }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.2), -3px -3px 8px rgba(255, 255, 255, 0.7);
    }

        .btn-delete:hover {
            background-color: #c0392b;
        }
</style>
