@model List<FinalWebApp.Data.Entities.Category>
<div class="row">
    <table>
        <tr>
            <th>Position</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @if (Model != null)
        {
            var position = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@(position++)</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="~/Category/Edit?idCategory=@item.Id" class="btn btn-update">
                            <i class="fa-solid fa-pen-to-square"></i> 
                        </a>

                        @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
                        {
                            @Html.Hidden("id", item.Id)
                            <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this item?');">
                                <i class="fa fa-trash"></i> 
                            </button>
                        }

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Empty data</td>
            </tr>
        }
    </table>
</div>

 <style>
     .row {
    margin-top: 20px;
    overflow-x: auto; /* Allows horizontal scroll on small screens */
}

table {
    width: 100%;
    border-collapse: collapse;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
}

th, td {
    text-align: left;
    padding: 12px 15px;
}

th {
    background-color: #4a90e2; /* Vibrant blue for headers */
    color: #ffffff;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 14px;
}

tr:nth-child(even) {
    background-color: #f3f8fb; /* Light blue for alternating rows */
}

tr:nth-child(odd) {
    background-color: #ffffff;
}

tr:hover {
    background-color: #d1ecf1; /* Soft teal on hover */
}

td {
    font-size: 14px;
    color: #34495e;
}

a {
    color: #007bff; /* Standard blue for links */
    text-decoration: none;
    font-weight: bold;
    margin-right: 10px;
}

a:hover {
    text-decoration: underline;
}


td[colspan] {
    text-align: center;
    font-style: italic;
    color: #95a5a6; /* Grey for empty data message */
}


    a, button {
        font-size: 12px;
    }
}
/* Nút Update */
.btn-update {
    display: inline-flex;
    align-items: center;
    background:  #36d1dc; 
    color: white;
    padding: 10px 16px;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    font-weight: bold;
    transition: background 0.3s ease, transform 0.2s ease;
}

.btn-update i {
    font-size: 16px;
}

.btn-update:hover {
    background: #5b86e5; 
    transform: scale(1.05);
}

/* Nút Delete */
.btn-delete {
    color: #d32f2f;
    padding: 10px 16px;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
}

.btn-delete i {
    font-size: 16px;
}

.btn-delete:hover {
    color:white;
    background-color: #d32f2f;
    transform: scale(1.05); 
}


 </style>                     