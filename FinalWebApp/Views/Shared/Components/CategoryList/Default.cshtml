@model List<FinalWebApp.Data.Entities.Category>
<div class="row">
    <table>
        <tr>
            <th>Position</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @if (Model != null)
        {
            var position = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@(position++)</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="~/Category/Edit?idCategory=@item.Id">Update</a>

                        @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
                        {
                            @Html.Hidden("id", item.Id)
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Empty data</td>
            </tr>
        }
    </table>
</div>
