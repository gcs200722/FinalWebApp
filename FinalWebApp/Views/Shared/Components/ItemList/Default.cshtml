@model List<FinalWebApp.Data.Entities.Item>
<div class="row">
    <div class="scrollable-table">
        <table>
            <thead>
                <tr>
                    <th width="5%">No.</th>
                    <th width="20%">Name of Item</th>
                    <th width="20%">Description</th>
                    <th width="10%">Category</th>
                    <th width="10%">Price</th>
                    <th width="20%">Image</th>
                    <th width="15%">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var position = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@position</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Category.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>
                                <img src="@Url.Content("~/Image/" + item.Image)" alt="@item.Name" class="item-image" />
                            </td>
                            <td>
                                <a href="~/Item/Edit?idItem=@item.Id" class="btn btn-primary">Update</a>
                                @using (Html.BeginForm("Delete", "Item", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this item?');" }))
                                {
                                    @Html.Hidden("id", item.Id)
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                }
                            </td>
                        </tr>
                        position++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Empty data</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to bottom right, #f9f9f9, #eceff1);
        color: #333;
        margin: 0;
        padding: 20px;
    }

    .scrollable-table {
        max-height: 500px;
        overflow-y: auto;
        display: block;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        background: #fff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    th, td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background:  #4a90e2;
        color: white;
        position: sticky;
        top: 0;
        z-index: 10;
        text-transform: uppercase;
        font-size: 0.9em;
        letter-spacing: 1px;
    }

    tbody tr:nth-child(even) {
        background: #f5f7fa;
    }

    tbody tr:nth-child(odd) {
        background: #ffffff;
    }

    tbody tr:hover {
        background: #d6e4f0;
        transition: background 0.3s;
    }

    .item-image {
        width: 80px;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .btn {
        text-decoration: none;
        display: inline-block;
        color: white;
        padding: 6px 10px;
        margin: 2px;
        border-radius: 5px;
        font-size: 0.85em;
        text-align: center;
        transition: background 0.3s, transform 0.2s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0056b3, #003f7f);
        transform: scale(1.05);
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #b21f2d);
        border: none;
    }

    .btn-danger:hover {
        background: linear-gradient(135deg, #b21f2d, #8a1a23);
        transform: scale(1.05);
    }

    td[colspan="7"] {
        text-align: center;
        font-style: italic;
        color: #888;
        background: #f7f7f7;
    }



        .btn {
            padding: 4px 8px;
            font-size: 0.75em;
        }
    }
</style>
