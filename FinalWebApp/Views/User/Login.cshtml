@model FinalWebApp.ViewModels.LoginViewModel

<form asp-action="Login" method="post">
    <div class="form-container shadow-lg">
        <h2>Login</h2>

        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control input-style" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control input-style" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
            <label class="form-check-label" for="RememberMe">
                Remember me
            </label>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>

<style>
    /* Body Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #e8ebf0); /* Soft gradient */
        color: #333;
        padding: 20px;
    }

    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #2c3e50;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-group {
        width: 100%;
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: 600;
        margin-bottom: 8px;
        color: #2c3e50;
    }

    .input-style {
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        transition: box-shadow 0.3s, border-color 0.3s;
    }

        .input-style:focus {
            border-color: #f39c12;
            box-shadow: 0 0 8px rgba(243, 156, 18, 0.5);
        }

    .btn-primary {
        background-color: #f39c12;
        border: none;
        border-radius: 12px;
        padding: 14px 20px;
        font-size: 18px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #e67e22;
        }

    .form-check-input {
        margin-right: 10px;
    }

    .form-check-label {
        font-size: 16px;
        color: #2c3e50;
    }

    .text-danger {
        color: #e74c3c;
        font-size: 12px;
    }
</style>
