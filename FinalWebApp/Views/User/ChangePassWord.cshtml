@model FinalWebApp.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<h2 class="page-title">@ViewData["Title"]</h2>

<form asp-action="ChangePassword" method="post" class="change-password-form">
    <div class="form-group">
        <label asp-for="CurrentPassword">Current Password</label>
        <input asp-for="CurrentPassword" class="form-control input-style" type="password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword">New Password</label>
        <input asp-for="NewPassword" class="form-control input-style" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control input-style" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

<style>
    /* Body Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #e8ebf0);
        color: #333;
        padding: 20px;
    }

    .page-title {
        color: #2c3e50;
        font-size: 32px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
    }

    .change-password-form {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .input-style {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
        transition: box-shadow 0.3s, border-color 0.3s;
    }

    .input-style:focus {
        border-color: #3498db;
        box-shadow: 0 0 8px rgba(52, 152, 219, 0.5);
    }

    .btn-primary {
        background-color: #f39c12;
        border: none;
        border-radius: 12px;
        padding: 14px 20px;
        font-size: 18px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #e67e22;
        }
    .text-danger {
        font-size: 12px;
        color: #e74c3c;
    }

  
</style>
