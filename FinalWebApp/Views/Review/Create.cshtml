@model FinalWebApp.Data.Entities.CustomerReview

@{
    ViewData["Title"] = "Đánh giá trải nghiệm";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SubmitReview" method="post">
    <div class="form-group">
        <label for="CustomerName">Họ và tên:</label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" required />
    </div>

    <div class="form-group">
        <label>Chất lượng món ăn:</label>
        <div>
            <label>
                <input type="radio" name="FoodQualityRating" value="1" required />
                1 - Kém
            </label>
            <label>
                <input type="radio" name="FoodQualityRating" value="2" />
                2 - Trung bình
            </label>
            <label>
                <input type="radio" name="FoodQualityRating" value="3" />
                3 - Tốt
            </label>
            <label>
                <input type="radio" name="FoodQualityRating" value="4" />
                4 - Rất tốt
            </label>
            <label>
                <input type="radio" name="FoodQualityRating" value="5" />
                5 - Xuất sắc
            </label>
        </div>
    </div>

    <div class="form-group">
        <label>Dịch vụ:</label>
        <div>
            <label>
                <input type="radio" name="ServiceRating" value="1" required />
                1 - Kém
            </label>
            <label>
                <input type="radio" name="ServiceRating" value="2" />
                2 - Trung bình
            </label>
            <label>
                <input type="radio" name="ServiceRating" value="3" />
                3 - Tốt
            </label>
            <label>
                <input type="radio" name="ServiceRating" value="4" />
                4 - Rất tốt
            </label>
            <label>
                <input type="radio" name="ServiceRating" value="5" />
                5 - Xuất sắc
            </label>
        </div>
    </div>

    <div class="form-group">
        <label>Không gian:</label>
        <div>
            <label>
                <input type="radio" name="AmbienceRating" value="1" required />
                1 - Kém
            </label>
            <label>
                <input type="radio" name="AmbienceRating" value="2" />
                2 - Trung bình
            </label>
            <label>
                <input type="radio" name="AmbienceRating" value="3" />
                3 - Tốt
            </label>
            <label>
                <input type="radio" name="AmbienceRating" value="4" />
                4 - Rất tốt
            </label>
            <label>
                <input type="radio" name="AmbienceRating" value="5" />
                5 - Xuất sắc
            </label>
        </div>
    </div>

    <div class="form-group">
        <label for="Comments">Ý kiến đóng góp (tuỳ chọn):</label>
        <textarea id="Comments" name="Comments" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
</form>
