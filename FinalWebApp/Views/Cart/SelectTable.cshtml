@using FinalWebApp.Data.Entities
@using FinalWebApp.Enum
@model List<Table>
<h2>Select a Table</h2>
<form asp-action="CreateOrder" method="post">
    <div>
        <h3><label for="tableId">Select Table:</label></h3>
        <div id="tableOptionsContainer" style="max-height: 300px; overflow-y: auto;">
            @foreach (var table in Model)
            {
                string statusClass = table.Status switch
                {
                    StatusTableEnum.Empty => "empty",
                    StatusTableEnum.Booked => "booked",
                    StatusTableEnum.Active => "active",
                    _ => "empty"
                };

                bool isSelectable = table.Status == StatusTableEnum.Empty;

                <div class="table-container">
                    <div class="table-option @statusClass @(isSelectable ? "selectable" : "non-selectable")"
                         data-id="@table.Id"
                         tabindex="@(isSelectable ? "0" : "-1")"
                         onclick="@(isSelectable ? "selectTable(this)" : "null")"
                         onkeypress="@(isSelectable ? "handleKeyPress(event, this)" : "null")">
                        <div class="capacity">@table.Capacity</div>
                        <!-- Dấu tích khi chọn bàn -->
                        <div class="checkmark" style="display: none;">✔</div>
                    </div>
                    <div class="table-name">@table.Name</div>
                </div>
            }
        </div>
    </div>
    <input type="hidden" id="selectedTableId" name="tableId" required />

    <div class="dining-time-container">
        <label for="diningTime">Dining Time:</label>
        <input type="datetime-local" id="diningTime" name="diningTime" required />
    </div>
    <button type="submit" class="place-order-btn">Place Order</button>
</form>

<script>
    function selectTable(tableElement) {
        if (tableElement.classList.contains('empty')) {
            // Loại bỏ dấu tích khỏi các bàn khác
            document.querySelectorAll('.table-option').forEach(el => {
                el.classList.remove('selected');
                el.querySelector('.checkmark').style.display = 'none'; // Ẩn dấu tích
            });

            // Thêm dấu tích và lớp "selected" vào bàn hiện tại
            tableElement.classList.add('selected');
            tableElement.querySelector('.checkmark').style.display = 'block'; // Hiển thị dấu tích

            // Cập nhật giá trị cho input ẩn
            const tableId = tableElement.getAttribute('data-id');
            document.getElementById('selectedTableId').value = tableId;
        } else {
            console.warn("This table is not available for selection.");
        }
    }

    function handleKeyPress(event, tableElement) {
        if ((event.key === "Enter" || event.key === " ") && tableElement.classList.contains('empty')) {
            event.preventDefault();
            selectTable(tableElement);
        }
    }
</script>

<style>
