@model FinalWebApp.ViewModels.OrderViewModel

<h2 class="page-title">Order Details</h2>

<div class="order-info-container">
    <h3 class="section-title">Order Information</h3>
    <div class="order-info-box">
        <p><strong>Customer Name:</strong> @Model.CustomerName</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Order Time:</strong> @Model.OrderTime.ToString("HH:mm:ss")</p>
        <p><strong>Table Number:</strong> @Model.TableNumber</p>
        <p><strong>Dining Time:</strong> @Model.DiningTime.ToString("dd/MM/yyyy HH:mm")</p>
    </div>
</div>

<h3 class="section-title">Order Items</h3>
<div class="order-items-container">
    <table class="order-items-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr class="order-item-row">
                    <td><img src="~/Image/@item.Image" alt="@item.Name" class="item-image"></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.Price)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p class="total-amount"><strong>Total Amount:</strong> @Model.TotalAmount</p>

<style>
    /* General Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f5f7fa, #e8ebf0);
        color: #333;
        padding: 20px;
    }

    .page-title {
        color: #2c3e50;
        font-size: 32px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 20px;
    }

    .section-title {
        color: #2c3e50;
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    /* Order Info Box */
    .order-info-container {
        margin-bottom: 20px;
    }

    .order-info-box {
        background-color: #ecf0f1;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    /* Order Items Table */
    .order-items-container {
        max-height: 400px; /* Limit height for scrolling */
        overflow-y: auto; /* Scrollable if items exceed */
        margin-bottom: 20px;
    }

    .order-items-table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .order-items-table th, .order-items-table td {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .order-items-table th {
        background-color: #3498db;
        color: white;
    }

    .order-items-table td {
        background-color: #fff;
    }

    .order-items-table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .order-item-row:hover {
        background-color: #f5f5f5;
    }

    .item-image {
        width: 50px;  /* Image size */
        height: 50px; /* Image size */
        border-radius: 8px;
        object-fit: cover;
    }

    .total-amount {
        font-size: 22px;
        font-weight: 700;
        color: #e67e22;
        text-align: right;
    }
</style>
