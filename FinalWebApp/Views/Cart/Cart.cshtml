<head>
    <!-- Thêm liên kết Font Awesome vào head -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>



@model FinalWebApp.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h1>@ViewData["Title"]</h1>

@if (!Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <img src="~/Image/@item.Image" alt="@item.Name" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <div class="quantity-control">
                            <button class="btn-icon" data-id="@item.Id">
                                <i class="fas fa-minus"></i>
                            </button>
                            <span id="quantity-@item.Id" style="margin: 0 10px;">@item.Quantity</span>
                            <button class="btn-icon" data-id="@item.Id">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </td>
                    <td id="total-@item.Id">@item.Total.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="cart-total">Grand Total: @Model.GrandTotal.ToString("C")</h4>
    <form method="post" action="@Url.Action("CreateOrder", "Cart")">
        <button type="submit">Create Order</button>
    </form>
    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Continue Shopping</a>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".btn-icon").click(function () {
            var itemId = $(this).data("id");
            var action = $(this).find("i").hasClass("fa-plus") ? "increase" : "decrease";
            updateCartQuantity(itemId, action);
        });

        function updateCartQuantity(itemId, action) {
            $.ajax({
                url: '/Cart/UpdateQuantity',
                type: 'POST',
                data: { itemId: itemId, action: action },
                success: function (response) {
                    if (response.success) {
                        // Cập nhật lại số lượng sản phẩm
                        $("#quantity-" + itemId).text(response.updatedQuantity);
                        // Cập nhật lại tổng giỏ hàng
                        $(".cart-total").text(response.cartTotal);
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Error occurred while updating the quantity.");
                }
            });
        }
    });
</script>
<style>
    /* General page styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #f5f5f5, #e0e0e0);
        color: #333;
        margin: 0;
    }

    /* Title styling */
    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: 600;
    }

    /* Empty cart message styling */
    p {
        font-size: 1.2rem;
        color: #666;
        text-align: center;
        margin-top: 20px;
    }

    /* Table styling */
    table {
        width: 100%;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        margin-top: 20px;
        background-color: #fff;
    }

    /* Table header styling */
    thead {
        background-color: #9b9b9b;
        color: white;
        font-weight: bold;
        text-align: center;
    }

    /* Table row styling */
    table tr {
        border-bottom: 1px solid #ddd;
        text-align: center;
    }

    table td {
        font-size: 1rem;
        color: #333;
        padding: 12px;
    }

    /* Item image styling */
    td img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        box-shadow: inset 0px 0px 6px rgba(0, 0, 0, 0.1);
    }

    /* Quantity control button styling */
    .quantity-control {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Icon button styling */
    .btn-icon {
        background-color: #fff;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.2rem;
        color: #333;
        border: 2px solid #ddd;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: inset 0px 0px 6px rgba(0, 0, 0, 0.1);
    }

        /* Hover effect for icon buttons */
        .btn-icon:hover {
            background-color: #f5f5f5;
            border-color: #bbb;
            transform: scale(1.1);
        }

    /* Total amount styling */
    .cart-total {
        font-size: 1.5rem;
        font-weight: bold;
        color: #fff;
        background-color: #5c6bc0;
        padding: 12px;
        border-radius: 12px;
        margin-top: 30px;
        text-align: center;
        box-shadow: inset 0px 0px 6px rgba(0, 0, 0, 0.1);
    }

    /* Submit button styling */
    button[type="submit"] {
        background-color: #5c6bc0;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        font-size: 1.2rem;
        box-shadow: inset 0px 0px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        /* Submit button hover effect */
        button[type="submit"]:hover {
            background-color: #3f51b5;
            transform: scale(1.05);
        }

    /* Secondary button styling */
    .btn-secondary {
        background-color: #9e9e9e;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        font-size: 1.2rem;
        box-shadow: inset 0px 0px 6px rgba(0, 0, 0, 0.1);
    }

        /* Secondary button hover effect */
        .btn-secondary:hover {
            background-color: #7e7e7e;
            transform: scale(1.05);
        }

    /* Remove button styling */
    .btn-danger {
        background-color: #e57373;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        font-size: 1.2rem;
        box-shadow: inset 0px 0px 6px rgba(0, 0, 0, 0.1);
    }

        /* Remove button hover effect */
        .btn-danger:hover {
            background-color: #f44336;
            transform: scale(1.05);
        }
</style>
