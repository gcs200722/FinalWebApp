@model FinalWebApp.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-gradient">@ViewData["Title"]</h1>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-warning text-center mt-4">
            <p>Your cart is empty.</p>
            <a href="@Url.Action("Index", "Customer")" class="btn btn-primary mt-2">Start Shopping</a>
        </div>
    }
    else
    {
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover text-center rounded shadow-sm" style="overflow: hidden;">
                <thead class="thead-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr class="table-row-hover">
                            <td>
                                <div class="image-container">
                                    <img src="~/Image/@item.Image" alt="@item.Name" class="img-thumbnail rounded zoom-effect">
                                </div>
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                            <td>@item.Total.ToString("C")</td>
                            <td>
                                <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm rounded-pill shadow-sm">
                                        <i class="fas fa-trash-alt"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4>Grand Total: <span class="text-success">@Model.GrandTotal.ToString("C")</span></h4>
            <div>
                <form method="post" action="@Url.Action("CreateOrder", "Cart")" class="d-inline">
                    <button type="submit" class="btn btn-success rounded-pill shadow-sm">
                        <i class="fas fa-check-circle"></i> Create Order
                    </button>
                </form>
                <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary rounded-pill ml-2 shadow-sm">
                    <i class="fas fa-shopping-cart"></i> Continue Shopping
                </a>
            </div>
        </div>
    }
</div>

<style>
    /* Body and Title Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        color: #495057;
    }

    .text-gradient {
        background: linear-gradient(90deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
    }

    /* Table Styling */
    .table {
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    .table-row-hover:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease-in-out;
    }

    /* Button Hover Effects */
    .btn {
        transition: all 0.3s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-danger:hover {
        background-color: #dc3545;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
    }

    /* Image Container with Zoom Effect */
    .image-container {
        width: 60px;
        height: 60px;
        overflow: hidden;
        border-radius: 8px;
        margin: 0 auto;
    }

    .zoom-effect {
        transition: transform 0.3s ease-in-out;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

        .zoom-effect:hover {
            transform: scale(1.3);
            cursor: pointer;
        }

    /* Styling for Form and Grand Total */
    .shadow-sm {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Custom styling for Grand Total and Buttons */
    .btn-success {
        background: linear-gradient(90deg, #28a745, #218838);
        color: white;
    }

    .btn-secondary {
        background: linear-gradient(90deg, #6c757d, #5a6268);
        color: white;
    }

    /* Styling for the Continue Shopping Button */
    .ml-2 {
        margin-left: 10px;
    }
</style>
