@model FinalWebApp.Data.Entities.Item

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <img src="~/Image/@Model.Image" alt="Image of @Model.Name" class="img-fluid" style="max-width: 100%; height: auto;">
    </div>
    <div class="col-md-6">
        <h3>Description</h3>
        <p>@Model.Description</p>
        <h3>Price</h3>
        <p>@Model.Price.ToString("C")</p>
        <h3>Category</h3>
        <p>@Model.Category?.Name</p>

        <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Back to Menu</a>
    </div>
</div>
<style>
    h3 ,h1{
    font-weight:bold;
    }
h1{
   text-align: center;
}

</style>
