@model List<FinalWebApp.Data.Entities.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container min-vh-50 d-flex align-items-center justify-content-center text-center">
    <div class="content-box">
        <h2 class="text-gradient mb-4">@ViewData["Title"]</h2>

@if (Model.Count == 0)
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.OrderStatus</td>
                    <td>
                        <!-- Link to order details -->
                        <a href="@Url.Action("OrderDetails", "Cart", new { orderId = order.Id })">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
