@using FinalWebApp.Enum
@model FinalWebApp.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = Model == null || string.IsNullOrEmpty(Model.Id) ? "Register" : "Edit User";
    var actionString = Model == null || string.IsNullOrEmpty(Model.Id) ? "Create" : "Edit";
    var buttonString = Model == null || string.IsNullOrEmpty(Model.Id) ? "Create" : "Edit";
}

<h2>@ViewData["Title"]</h2>
@TempData["SuccessMessage"]

<form asp-action="@actionString" method="post">
    <input type="hidden" asp-for="Id" class="form-control" />

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> There was an error with your submission.
        </div>
    }

    <div class="form-container">
        <div class="form-group">
            <label asp-for="Fullname" class="control-label"></label>
            <input asp-for="Fullname" class="form-control input-style" value="@Model?.Fullname" />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control input-style" value="@Model?.Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        @if (@actionString != "Edit")
        {
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control input-style" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control input-style" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        }

        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>

            <div class="form-check">
                <input class="form-check-input" type="radio" id="male" name="Gender" value="1"
                @(Model?.Gender == GenderEnum.Male ? "checked" : "") />
                <label class="form-check-label" for="male">
                    Male
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" id="female" name="Gender" value="2"
                @(Model?.Gender == GenderEnum.Female ? "checked" : "") />
                <label class="form-check-label" for="female">
                    Female
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" id="other" name="Gender" value="3"
                @(Model?.Gender == GenderEnum.Other ? "checked" : "") />
                <label class="form-check-label" for="other">
                    Other
                </label>
            </div>

            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberPhone" class="control-label"></label>
            <input asp-for="NumberPhone" class="form-control input-style" type="tel" value="@Model?.NumberPhone" />
            <span asp-validation-for="NumberPhone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label"></label>
            <input asp-for="DateOfBirth" class="form-control input-style" type="date" value="@Model?.DateOfBirth?.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">@buttonString</button>
    </div>
</form>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #fffaf0, #f8eee5);
        color: #2c3e50;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
    }

    .control-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .input-style {
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .input-style:focus {
            border-color: #d35400;
            box-shadow: 0 4px 12px rgba(211, 84, 0, 0.2);
        }

    .btn-primary {
        background-color: #d35400;
        border: none;
        border-radius: 12px;
        padding: 14px;
        font-size: 18px;
        width: 100%;
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn-primary:hover {
            background-color: #e67e22;
            transform: scale(1.05);
        }

    .text-danger {
        font-size: 12px;
        color: #e74c3c;
    }
</style>
